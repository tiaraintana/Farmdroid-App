<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rice_desease_activity.PenyakitBercakActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nama"
                android:layout_width="214dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="56dp"
                android:gravity="center_horizontal"
                android:scrollbars="vertical"
                android:text="BERCAK DAUN"
                android:textColor="#f000"
                android:textSize="27sp" />

            <ImageView
                android:layout_width="343dp"
                android:layout_height="233dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:src="@drawable/bercakdaun" />

            <TextView
                android:id="@+id/sebab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Penyebab : \nJamur Helmintosporium oryzae.\n"
                android:textColor="#f000"
                android:layout_marginTop="56dp"
                android:textSize="18sp" />

            <TextView
                android:justificationMode="inter_word"
                android:id="@+id/ciri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                android:text="Ciri-Ciri Bercak Daun pada Padi :\n\n1. Biji padi busuk saat berkecambah.\n2. Tanaman busuk dan kering.\n3. Biji bercak-bercak tetapi tetap berisi."
                android:textColor="#f000"
                android:textSize="18sp" />
            <Button
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="113dp"
                android:text="CARA PENGENDALIAN"
                android:background="@drawable/button_register"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:onClick="Kendali"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>