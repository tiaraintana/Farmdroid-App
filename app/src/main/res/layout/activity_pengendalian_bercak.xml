<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PengendalianBercakActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nama"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="56dp"
                android:gravity="center_horizontal"
                android:scrollbars="vertical"
                android:text="CARA MENGATASI BERCAK DAUN !!!"
                android:textColor="#f000"
                android:textSize="20sp" />



            <TextView
                android:id="@+id/ciri"
                android:justificationMode="inter_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                android:text="Pengendalian Penyakit Bercak Daun :\n
                            \nPengendalian dengan 3 kali penyemprotan yaitu  pada  fase  anakan  maksimum, awal pembungaan  dan  awal  pengisian  dengan fungisida benomil, mankozeb, carbendazim atau difenoconazol dengan dosis 1 cc per 1 liter air, dengan volume semprot 500 liter/ha,  dapat   menekan   perkembangan penyakit  bercak  daun   cercospora   dan menekan kehilangan hasil padi sampai dengan 30%."
                android:textColor="#f000"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>