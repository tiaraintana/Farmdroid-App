<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/animation"
    android:layout_height="match_parent"
    tools:context=".ui.PenyakitBlastActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama1"
                android:layout_width="214dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="56dp"
                android:gravity="center_horizontal"
                android:scrollbars="vertical"
                android:text="BLAST"
                android:textColor="#f000"
                android:textSize="27sp" />

            <ImageView
                android:layout_width="343dp"
                android:layout_height="233dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:src="@drawable/blast" />

            <TextView
                android:id="@+id/sebab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="56dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                android:text="Penyebab : \nJamur Pyricularia oryzae.\n"
                android:textColor="#f000"
                android:textSize="18sp" />

            <TextView
                android:justificationMode="inter_word"
                android:id="@+id/ciri2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                android:text="Ciri-Ciri Blast pada Padi :\n\n1. Pada fase pertumbuhan\nTimbul bercak berbentuk belah ketupat pada daun padi.\n2. Pada fase generatif\nPada fase ini menyerang bagian tangkai malai, hingga menimbulkan gelaja berwarna coklat pada malai padi."
                android:textColor="#f000"
                android:textSize="18sp" />

            <Button
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_register"
                android:onClick="Kendali"
                android:text="CARA PENGENDALIAN"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>