<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/animation"
    android:layout_height="match_parent"
    tools:context=".rice_desease_activity.pengendalian.PengendalianBusukBatangActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nama"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="56dp"
                android:gravity="center_horizontal"
                android:scrollbars="vertical"
                android:text="CARA MENGATASI BUSUK BATANG !!!"
                android:textColor="#f000"
                android:textSize="20sp" />



            <TextView
                android:id="@+id/ciri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                android:text="Pengendalian Penyakit Busuk Batang :\n\n1. Pengendalian secara fisik bisa dengan cara pengeringan petakan dan biarkan tanah hingga retak sebelum dialiri lagi.
                \n2. Di samping itu tunggul - tunggul padi sesudah panen harus dibakar atau didekomposisi."
                android:textColor="#f000"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>